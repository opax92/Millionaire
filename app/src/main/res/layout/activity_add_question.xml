<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/black"
    tools:context="com.opax.sebastian.millionaire.usergui.AddQuestionActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Treść pytania:"
        android:textColor="@android:color/white"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:maxLength="80"
        android:textColor="@android:color/white"
        android:ems="10"
        style="@style/EditTextAppTheme"
        android:id="@+id/editContentQuestion"
        android:layout_gravity="center_horizontal" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:layout_weight="0.21">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/textView3"
            android:id="@+id/radioGroup"
            android:layout_toLeftOf="@+id/textView3">

            <RadioButton
                android:layout_width="47dp"
                android:layout_height="47dp"
                style="@style/RadioButtonAppTheme"
                android:id="@+id/radioButtonA" />

            <RadioButton
                android:layout_width="47dp"
                android:layout_height="47dp"
                style="@style/RadioButtonAppTheme"
                android:id="@+id/radioButtonB" />

            <RadioButton
                android:layout_width="47dp"
                android:layout_height="47dp"
                style="@style/RadioButtonAppTheme"
                android:id="@+id/radioButtonC" />

            <RadioButton
                android:layout_width="47dp"
                android:layout_height="47dp"
                style="@style/RadioButtonAppTheme"
                android:id="@+id/radioButtonD" />

        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Odpowiedzi:"
            android:id="@+id/textView3"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editA"
            style="@style/EditTextAppTheme"
            android:maxLength="18"
            android:textColor="@android:color/white"
            android:layout_alignTop="@+id/radioGroup"
            android:layout_toRightOf="@+id/radioGroup"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editB"
            android:maxLength="18"
            style="@style/EditTextAppTheme"
            android:layout_below="@+id/editA"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@+id/radioGroup"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editC"
            android:maxLength="18"
            style="@style/EditTextAppTheme"
            android:layout_below="@+id/editB"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@+id/radioGroup"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editD"
            android:maxLength="18"
            style="@style/EditTextAppTheme"
            android:layout_below="@+id/editC"
            android:textColor="@android:color/white"
            android:layout_toRightOf="@+id/radioGroup"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Poziom pytania:"
        android:textColor="@android:color/white"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="3"
        style="@style/EditTextAppTheme"
        android:ems="10"
        android:textColor="@android:color/white"
        android:id="@+id/editLevel"
        android:layout_gravity="right" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj pytanie "
        android:id="@+id/buttonOk"
        style="@style/ButtonAppTheme"
        android:textColor="@android:color/white"
        android:layout_gravity="right" />
</LinearLayout>
